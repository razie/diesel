#
# MAKE A backup in production dB and get it here
#

DT=`date | sed 's/ //g'`

RKS=~/w/racerkidz/s

cd $RKS

mv db/dump.tar.gz rk-backups/dump.OLD.$DT.tar.gz
mv db/dump rk-backups/dump.OLD.$DT

ssh razvanc@cloud3a.razie.com "cd ~/rk; . ./dbr-backup-prod"

rm db/dump.tar db/dump.tar.gz

scp razvanc@cloud3a.razie.com:rk/db/dump.tar.gz ./db/dump.tar.gz

sleep 2

cd db
gunzip dump.tar.gz

tar xvf dump.tar

gzip dump.tar
cd ..
cd ..
